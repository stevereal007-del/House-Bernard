[Unit]
Description=House Bernard Airlock Monitor
After=network.target docker.service
Requires=docker.service

[Service]
Type=simple
# Set User to your Linux username on the Beelink
User=hb
WorkingDirectory=%h/House-Bernard
ExecStart=/usr/bin/python3 %h/House-Bernard/airlock/airlock_monitor.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
