{
  "_comment": "House Bernard — Lab B Seccomp Profile v1.0. Security genetics / sandbox escape testing. MORE permissive than Lab A to observe what artifacts TRY to do. Logs blocked attempts rather than silently denying. Still blocks truly dangerous syscalls (mount, kexec, modules).",
  "defaultAction": "SCMP_ACT_LOG",
  "architectures": [
    "SCMP_ARCH_X86_64",
    "SCMP_ARCH_AARCH64"
  ],
  "syscalls": [
    {
      "_comment": "Standard safe operations — allow freely",
      "names": [
        "read", "write", "close", "fstat", "lseek",
        "mmap", "mprotect", "munmap", "brk",
        "rt_sigaction", "rt_sigprocmask", "rt_sigreturn",
        "ioctl", "access", "pipe", "select", "poll",
        "dup", "dup2",
        "nanosleep", "clock_nanosleep", "clock_gettime", "clock_getres",
        "gettimeofday", "getpid", "getppid", "getuid", "getgid",
        "geteuid", "getegid", "getgroups",
        "openat", "newfstatat", "readlinkat",
        "getrandom",
        "futex", "set_robust_list", "get_robust_list",
        "exit", "exit_group",
        "arch_prctl", "set_tid_address",
        "pread64", "pwrite64",
        "readv", "writev",
        "sched_getaffinity", "sched_yield",
        "madvise", "fcntl", "statx", "rseq", "prlimit64"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "_comment": "Network syscalls — LOG and DENY (we want to see attempts)",
      "names": [
        "socket", "connect", "accept", "sendto", "recvfrom",
        "sendmsg", "recvmsg", "bind", "listen", "accept4",
        "socketpair", "setsockopt", "getsockopt"
      ],
      "action": "SCMP_ACT_LOG"
    },
    {
      "_comment": "Process creation — LOG and DENY (observe escape attempts)",
      "names": [
        "clone", "clone3", "fork", "vfork", "execve", "execveat",
        "ptrace", "process_vm_readv", "process_vm_writev"
      ],
      "action": "SCMP_ACT_LOG"
    },
    {
      "_comment": "HARD DENY — never allow regardless of research value",
      "names": [
        "mount", "umount2", "pivot_root", "chroot",
        "kexec_load", "kexec_file_load",
        "init_module", "finit_module", "delete_module",
        "reboot", "swapon", "swapoff"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    }
  ]
}
